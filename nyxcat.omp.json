{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": " {{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }} ",
          "background": "p:green",
          "foreground": "p:black"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \uea83 {{ path .Path .Location }} ",
          "properties": {
            "style": "folder"
          },
          "background": "p:teal",
          "foreground": "p:black"
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:black{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:black{{ end }}",
            "{{ if gt .Ahead 0 }}p:black{{ end }}"
          ],
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:peach{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:red{{ end }}",
            "{{ if gt .Ahead 0 }}p:yellow{{ end }}",
            "{{ if gt .Behind 0 }}p:flamingo{{ end }}"
          ],
          "template": " {{ if .UpstreamURL }}{{ url .UpstreamIcon .UpstreamURL }} {{ end }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "background": "p:rosewater",
          "foreground": "p:black"
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \uf0e7 ",
          "background": "p:red",
          "foreground": "p:black"
        },
        {
          "type": "status",
          "style": "diamond",
          "background_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "leading_diamond": "<transparent,background>\ue0b0</>",
          "trailing_diamond": "\ue0b4",
          "template": " {{ if gt .Code 0 }}\uf00d{{ else }}\uf00c{{ end }} ",
          "properties": {
            "always_enabled": true
          },
          "background": "p:green",
          "foreground": "p:black"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "node",
          "style": "plain",
          "template": "\ue718 ",
          "properties": {
            "display_mode": "files",
            "fetch_package_manager": false,
            "home_enabled": false
          },
          "background": "transparent",
          "foreground": "p:green"
        },
        {
          "type": "go",
          "style": "plain",
          "template": "\ue626 ",
          "properties": {
            "fetch_version": false
          },
          "background": "transparent",
          "foreground": "p:blue"
        },
        {
          "type": "python",
          "style": "plain",
          "template": "\ue235 ",
          "properties": {
            "display_mode": "files",
            "fetch_version": false,
            "fetch_virtual_env": false
          },
          "background": "transparent",
          "foreground": "p:yellow"
        },
        {
          "type": "shell",
          "style": "plain",
          "template": "<p:blue><b>{{ .Name }}</b></> ",
          "background": "transparent",
          "foreground": "p:white"
        },
        {
          "type": "executiontime",
          "style": "plain",
          "template": "in <p:blue><b>{{ .FormattedMs }}</b></>",
          "background": "transparent",
          "foreground": "p:white",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": true
          }
        }
      ]
    }
  ],
  "tooltips": [
    {
      "type": "aws",
      "tips": [
        "aws"
      ],
      "style": "diamond",
      "leading_diamond": "\ue0b0",
      "trailing_diamond": "\ue0b4",
      "template": " \ue7ad {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} ",
      "properties": {
        "display_default": true
      },
      "background": "p:peach",
      "foreground": "p:black"
    },
    {
      "type": "az",
      "tips": [
        "az"
      ],
      "style": "diamond",
      "leading_diamond": "\ue0b0",
      "trailing_diamond": "\ue0b4",
      "template": " \uebd8 {{ .Name }} ",
      "properties": {
        "display_default": true
      },
      "background": "p:blue",
      "foreground": "p:black"
    }
  ],
  "transient_prompt": {
    "template": "<p:blue,transparent>\ue0b6</><,p:blue> {{ .PWD }} </><p:blue,transparent>\ue0b0</> ",
    "background": "transparent",
    "foreground": "p:black"
  },
  "secondary_prompt": {
    "template": "<p:blue,transparent>\ue0b6</><,p:blue> > </><p:blue,transparent>\ue0b0</> ",
    "background": "transparent",
    "foreground": "p:black"
  },
  "palette": {
    "flamingo": "#F2CDCD",
    "rosewater": "#F5E0DC",
    "peach": "#FAB387",
    "yellow": "#F9E2AF",
    "green": "#A6E3A1",
    "teal": "#94E2D5",
    "sky": "#89DCEB",
    "sapphire": "#74C7EC",
    "blue": "#87B0F9",
    "lavender": "#B4BEFE",
    "mauve": "#CBA6F7",
    "pink": "#F5C2E7",
    "red": "#F38BA8",
    "maroon": "#EBA0AC",
    "black": "#1E1E2E",
    "white": "#B3BCDF"
  }
}
